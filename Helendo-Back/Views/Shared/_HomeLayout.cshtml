<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/173a14ba98.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/assets/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/css/swiper.min.css" />
    <title>Helendo</title>
</head>

<body>
    <header class="header">
        <div class="container">
            <nav class="nav-bar">
                <div class="col-lg-4 d-flex justify-content-starts">
                    <div class="nav-bar__search">
                        <input placeholder="Search Anything...">
                        <button type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-center">
                    <div class="nav-bar__logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/images/helendo-logo.png" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-end">
                    <div class="nav-bar__navigation">
                        <ul class="navigation-lists">
                            <li><a asp-controller="Auth" asp-action="Login"><i class="fa-regular fa-user"></i></a></li>
                            <li><a asp-controller="Wishlist" asp-action="Index"><i class="fa-regular fa-heart"></i></a></li>
                            <li><a asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-bag-shopping"></i> </a></li>
                            <li><button type="button" class="menu-open-button"><i class="fa-solid fa-bars"></i></button></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="menu-modal">
            <div class="menu-sidebar">
                <div class="menu-close">
                    <button type="button" class="menu-close-button"><i class="fa-solid fa-x"></i></button>
                </div>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Products</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Blogs</a></li>
                    <li><a asp-controller="Wishlist" asp-action="Index">Wishlist</a></li>
                    <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Auth" asp-action="Register">Register</a></li>
                </ul>
            </div>
        </div>
    </header>
    <main>
        @RenderBody();
    </main>
        <footer>
        <section class="footer-section">
            <div class="container">
                <div class="row">
                    <div class="footer-address col-lg-4">
                        <h2>Address</h2>
                        <ul class="addresses-lists">
                            <li><i class="fa-solid fa-location-dot"></i> Helendo, Chicago, USA 2022</li>
                            <li><i class="fa-solid fa-phone"></i> +846677028028</li>
                        </ul>
                        <ul class="social-medias">
                            <li><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
                            <li><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
                        </ul>
                    </div>
                    <div class="footer-information col-lg-3">
                        <h2>Help & Information</h2>
                        <ul class="help-lists">
                            <li><a href="#">Help & Contact Us</a></li>
                            <li><a href="#">Returns & Refunds</a></li>
                            <li><a href="#">Online Stores</a></li>
                            <li><a href="#">Terms & Conditions</a></li>
                        </ul>
                    </div>
                    <div class="footer-about col-lg-2">
                        <h2>About Us</h2>
                        <ul class="about-lists">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">What We Do</a></li>
                            <li><a href="#">FAQ Page</a></li>
                            <li><a href="#">Contact Us</a></li>
                        </ul>
                    </div>
                    <div class="footer-newsletter col-lg-3">
                        <h2>Newsletter</h2>
                        <div class="footer-newsletter__input">
                            <input placeholder="Your email address"><button type="button"><i
                                    class="fa-solid fa-arrow-right"></i></button>
                        </div>
                        <ul class="newsletter-lists">
                            <li><a href="#">Term & Condition</a></li>
                            <li><a href="#">Policy</a></li>
                            <li><a href="#">Map</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </section>
        <section class="copyright-section">
            <h5><a href="#">Helendo</a></h5>
            <span> © 2022 Helendo.
                All Rights Reserved.</span>
        </section>
    </footer>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
<script src="~/assets/js/main.js"></script>
<script src="~/assets/js/menu-sidebar.js"></script>

</html>