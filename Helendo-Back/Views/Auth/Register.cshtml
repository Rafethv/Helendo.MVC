@model RegisterVM

<section class="register-title-section">
    <div class="container">
        <div class="register-title-container">
            <div class="register-title__header">
                <h1>Register</h1>
            </div>
            <div class="register-title__navigation">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><span>Register</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="register-section">
    <div class="container d-flex justify-content-center">
        <div class="register-container">
            <ul class="register-register__navigation">
                <li><a asp-controller="Auth" asp-action="Login" >Login</a></li>
                <li><span>Our Register</span></li>
            </ul>
            <div class="register-inputs">
                <h3>Register an account</h3>
                <form class="form" method="post" style="display:flex; flex-direction:column;">
                    <input asp-for="Firstname" placeholder="First Name" />
                    <input asp-for="Lastname" placeholder="Last Name" />
                    <input asp-for="Email" placeholder="Email" />
                    <input asp-for="Username" placeholder="Username" />
                    <input asp-for="Password" placeholder="Password" />
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <button type="submit">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>