                                <div class="swiper-slide">
                                    <a asp-controller="Product" asp-action="Detail">
                                        <img src="~/assets/images/slider-first.jpg">
                                    </a>
                                    <div class="product-content">
                                        <h3><a asp-controller="Product" asp-action="Detail">Art Deco Home</a></h3>
                                        <span>$30.00</span>
                                    </div>
                                </div>
                                <div class="swiper-slide">
                                    <a asp-controller="Product" asp-action="Detail">
